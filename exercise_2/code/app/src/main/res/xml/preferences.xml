<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/preferences_header">
        <ListPreference
            app:defaultValue="Nicht Sichtbar"
            app:title="@string/radius"
            app:entries="@array/radius_entries"
            app:entryValues="@array/radius_values"
            app:summary="@string/radius_desc_summary"
            app:key="radius"
            app:useSimpleSummaryProvider="true"
            />
        <ListPreference
            app:defaultValue="1 Stunde"
            app:title="@string/interval"
            app:entries="@array/interval_entries"
            app:entryValues="@array/interval_values"
            app:summary="@string/interval_desc_summary"
            app:key="interval"
            app:useSimpleSummaryProvider="true"
            />
    </PreferenceCategory>
</PreferenceScreen>